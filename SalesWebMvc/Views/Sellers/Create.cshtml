@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Seller.Name">Name</label>
                <input type="text" asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email">Email</label>
                <input type="email" asp-for="Seller.Email" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate">BirthDate</label>
                <input type="datetime-local" asp-for="Seller.BirthDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary">Base Salary</label>
                <input type="text" asp-for="Seller.BaseSalary" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartamentId" class="control-label"></label>
                <select asp-for="Seller.DepartamentId" asp-items="@(new SelectList(Model.Departaments,"Id","Name"))"></select>
            </div>
            <input type="submit" value="Create" class="btn btn-default" />
        </form>
    </div>
</div>

